<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/autocorreccion/db" VERSION="2025102301" COMMENT="Autocorreccion Plugin">
    <TABLES>
    
        <!-- Tabla principal del módulo -->
        <TABLE NAME="autocorreccion" COMMENT="Tabla principal del módulo autocorreccion">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true"/>
                <FIELD NAME="intro" TYPE="text" NOTNULL="false"/>
                <FIELD NAME="introformat" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="0"/>
                <FIELD NAME="rubric_type" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="0" COMMENT="0=numérica,1=apto/no apto"/>
                <FIELD NAME="rubric_config" TYPE="text" NOTNULL="false" COMMENT="Configuración JSON de la rúbrica"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>

        <!-- Tabla para guardar envíos -->
        <TABLE NAME="autocorreccion_envios" COMMENT="Tabla para guardar envíos">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
                <FIELD NAME="autocorreccionid" TYPE="int" LENGTH="10" NOTNULL="true"/>
                <FIELD NAME="nota" TYPE="float" NOTNULL="false" COMMENT="Nota decimal del envío"/>
                <FIELD NAME="feedback" TYPE="text" NOTNULL="false"/>
                <FIELD NAME="files" TYPE="text" NOTNULL="false" COMMENT="JSON con lista de archivos"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
                <FIELD NAME="teacherid" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="ID del profesor que revisó"/>
                <FIELD NAME="teacher_feedback" TYPE="text" NOTNULL="false" COMMENT="Feedback adicional del profesor"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="idx_user_autocorreccion" UNIQUE="false" FIELDS="userid,autocorreccionid"/>
            </INDEXES>
        </TABLE>

    </TABLES>
</XMLDB>